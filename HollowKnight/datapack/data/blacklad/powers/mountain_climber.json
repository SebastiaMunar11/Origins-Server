									"comment": "Holding a climb",

									"type": "origins:and",
									"actions": [{
											"type": "origins:change_resource",
											"resource": "blacklad:mountain_climber_stamina",
											"change": -20
										},
										{
											"type": "origins:chance",
											"chance": 0.125,
											"action": {
												"type": "origins:execute_command",
												"command": "particle minecraft:dust 1 1 1 0.5 ~ ~1 ~ 0.1 0.1 0.1 0.125 2 normal"
											}
										}
									]
								}
							}
						}
					]
				},
				{
					"type": "origins:if_else",
					"condition": {
						"type": "origins:power_active",
						"power": "blacklad:mountain_climber_tired",
