								"type": "origins:change_resource",
								"resource": "blacklad:mountain_climber_flash_state",
								"change": -1
							}
						},
						"else_action": {
							"type": "origins:and",
							"actions": [{
									"type": "origins:change_resource",
									"resource": "blacklad:mountain_climber_no_grab",
									"change": 1
								},
								{
									"type": "origins:change_resource",
									"resource": "blacklad:mountain_climber_flash_state",
									"change": -1
								}
							]
						}
