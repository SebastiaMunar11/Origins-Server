									"type": "origins:block_collision",
									"offset_x": -0.01,
									"offset_y": 0,
									"offset_z": 0
								},
								"if_action": {
									"type": "origins:add_velocity",
									"x": 0.375
								}
							},
							{
								"type": "origins:if_else",
								"condition": {
									"type": "origins:block_collision",
									"offset_x": 0.01,
									"offset_y": 0,
									"offset_z": 0
