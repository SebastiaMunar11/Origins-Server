									"type": "origins:add_velocity",
									"x": -0.375
								}
							}
						]

					},

					"else_action": {
						"comment": "Neutral wall jump",

						"type": "origins:and",
						"actions": [{
								"type": "origins:add_velocity",
								"y": 0.4375,
								"set": true
							},
							{
								"type": "origins:if_else",
								"condition": {
									"type": "origins:block_collision",
									"offset_x": 0,
									"offset_y": 0,
									"offset_z": -0.01
								},
								"if_action": {
									"type": "origins:add_velocity",
									"z": 0.075
								}
							},
							{
								"type": "origins:if_else",
								"condition": {
									"type": "origins:block_collision",
									"offset_x": 0,
									"offset_y": 0,
									"offset_z": 0.01
								},
								"if_action": {
									"type": "origins:add_velocity",
